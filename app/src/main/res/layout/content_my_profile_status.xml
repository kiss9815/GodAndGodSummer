<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_below="@+id/tableLayout">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_target_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/setting" />

            <Button
                android:id="@+id/button_last_target"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/button_target_settings"
                android:layout_toStartOf="@+id/button_target_settings"/>
                <!-- android:background="@drawable/calandar" /> -->
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="신앙도"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/faithgraph_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:progress="50"
            android:progressDrawable="@drawable/progressbar_faith" />

        <TextView
            android:id="@+id/faithgraph_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7361"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:text="인기도"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/populargraph_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:progress="60"
            android:progressDrawable="@drawable/progressbar_population" />

        <TextView
            android:id="@+id/populargraph_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5592"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="5dp"
            android:text="봉헌도"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/donategraph_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:progress="60"
            android:progressDrawable="@drawable/progressbar_donate" />

        <TextView
            android:id="@+id/donategraph_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6132"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:text="친밀도"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/friendlygraph_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:progress="60"
            android:progressDrawable="@drawable/progressbar_friend" />

        <TextView
            android:id="@+id/friendlygraph_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:text="6832"
            android:textSize="18dp"
            android:textStyle="bold" />
    </TableLayout>

</RelativeLayout>